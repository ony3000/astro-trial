---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li
  class="group flex list-none rounded-[0.6rem] bg-white bg-none bg-[length:400%] bg-[100%] p-1 shadow-[0_4px_6px_-1px_rgba(0,0,0,0.1),0_2px_4px_-2px_rgba(0,0,0,0.1)] transition-[background-position] duration-[0.6s] ease-[cubic-bezier(0.22,1,0.36,1)] focus-within:bg-[0] focus-within:bg-gradient-accent hover:bg-[0] hover:bg-gradient-accent"
>
  <a
    href={href}
    class="w-full rounded-[0.35rem] bg-white px-[1.3rem] py-4 leading-[1.4] text-[#111] no-underline opacity-80"
  >
    <h2
      class="m-0 text-[1.25rem] transition-[color] duration-[0.6s] ease-[cubic-bezier(0.22,1,0.36,1)] group-focus-within:text-accent group-hover:text-accent"
    >
      {title}
      <span>&rarr;</span>
    </h2>
    <p class="mb-0 mt-2 text-[#444]">
      {body}
    </p>
  </a>
</li>
